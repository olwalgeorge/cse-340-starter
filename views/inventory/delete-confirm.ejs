<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Delete Vehicle</h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }); %>
  </ul>
<% } %>

<p><strong>Confirm Deletion - The delete is permanent.</strong></p>
<p>Are you sure you want to delete this vehicle? This action cannot be undone.</p>

<form class="account-form" action="/inv/delete/" method="post">
  <div class="form-group">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_year">Year:</label>
    <input type="text" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" readonly>
  </div>

  <div class="form-group">
    <label for="inv_price">Price:</label>
    <input type="text" id="inv_price" name="inv_price" value="$<%= Number(locals.inv_price).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>" readonly>
  </div>

  <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

  <div class="form-group">
    <input type="submit" value="Delete Vehicle" class="btn btn-danger">
    <a href="/inv/" class="btn btn-secondary">Cancel</a>
  </div>
</form>

<style>
.btn-danger {
  background-color: #dc3545;
  color: white;
  border: 1px solid #dc3545;
}

.btn-danger:hover {
  background-color: #c82333;
  border-color: #bd2130;
}

.btn-secondary {
  background-color: #6c757d;
  color: white;
  border: 1px solid #6c757d;
  text-decoration: none;
  padding: 10px 20px;
  border-radius: 4px;
  display: inline-block;
  margin-left: 10px;
}

.btn-secondary:hover {
  background-color: #5a6268;
  border-color: #545b62;
  text-decoration: none;
  color: white;
}
</style>
